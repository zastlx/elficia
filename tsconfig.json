{
    "compilerOptions": {
        "target": "ESNext",         
        "module": "commonjs", // Or a more modern ES module option if your Node.js version supports it       
        "outDir": "dist",   
        "strict": true,
        "esModuleInterop": true,
        "types": [
            "@cocos/creator-types/engine",
            "@cocos/creator-types/editor"
        ],
        "baseUrl": "./src/",
        "paths": {
            "@api/*": ["./api/*"],
            "@cctypes/*": ["./types/*"],
            "@modules/*": ["./module/modules/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}