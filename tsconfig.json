{
    "compilerOptions": {
        "target": "es6",
        "module": "AMD",
        "outDir": "dist",
        "outFile": "dist/index.js",
        "strict": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": [
            "@cocos/creator-types/engine",
            "@cocos/creator-types/editor"
        ],
        "baseUrl": "./src/",
        "paths": {
            "@api/*": ["./api/*"],
            "@cctypes/*": ["./types/*"],
            "@modules/*": ["./module/modules/*"],
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
